@model StudyBuddy.Models.Student

@{
    ViewBag.Title = "Signup for an account";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

@using (Html.BeginForm("Signup", "Auth", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.PhoneNumber)
    @Html.HiddenFor(model => model.Availability)
    @Html.HiddenFor(model => model.ProfilePic)
    @Html.HiddenFor(model => model.SecurityLevel)
    @Html.HiddenFor(model => model.Guid)
    @Html.HiddenFor(model => model.ReturnUrl)
    <div class="signpanel-wrapper">
        <div class="signbox signup">
            <div class="signbox-header">
                <h2>StudyBuddy</h2>
                <p class="mg-b-0">@ViewBag.Title</p>
            </div><!-- signbox-header -->
            <div class="signbox-body validation">
                <div class="form-group">
                    <label class="form-control-label">@Html.LabelFor(model => model.Email):</label>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Type email address", type = "email", name = "email" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div><!-- form-group -->

                <div class="row row-xs">
                    <div class="col-sm">
                        <div class="form-group">
                            <label class="form-control-label">@Html.LabelFor(model => model.FirstName):</label>
                            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "Type firstname", type = "text", name = "firstname" })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                        </div><!-- form-group -->
                    </div><!-- col -->
                    <div class="col-sm">
                        <div class="form-group">
                            <label class="form-control-label">@Html.LabelFor(model => model.LastName):</label>
                            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "Type lastname", type = "text", name = "lastname" })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        </div><!-- form-group -->
                    </div><!-- col -->
                </div><!-- row -->

                <div class="row row-xs">
                    <div class="col-sm">
                        <div class="form-group">
                            <label class="form-control-label">@Html.LabelFor(model => model.Password):</label>
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Type password", type = "password", name = "password" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div><!-- form-group -->
                    </div><!-- col -->
                    <div class="col-sm">
                        <div class="form-group">
                            <label class="form-control-label">@Html.LabelFor(model => model.ConfirmPassword):</label>
                            @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", placeholder = "Retype password", type = "password", name = "password" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div><!-- form-group -->
                    </div><!-- col -->
                </div><!-- row -->

                <div class="form-group mg-b-20 tx-12">By clicking Sign Up button below you agree to our <a href="">Terms of Use</a> and our <a href="">Privacy Policy</a></div>

                <button type="submit" class="btn btn-success btn-block">Sign Up</button>
                <div class="tx-center bd pd-10 mg-t-40">Already a member? <a href="@Url.Action("Login", "Auth")">Sign In</a></div>
            </div><!-- signbox-body -->
        </div><!-- signbox -->
    </div><!-- signpanel-wrapper -->
}